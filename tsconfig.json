{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2016",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "moduleDetection": "force",
    "allowJs": false,
    "resolveJsonModule": true,
    "types": ["node", "@types/express", "jest"],
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
  },
  "include": [
    "src/**/*",
    "src/types/**/*",
    "src/types/express.d.ts",
    "src/types/json.d.ts"
  ],
  "exclude": ["node_modules", "dist", "src/test", "tools"]
}
